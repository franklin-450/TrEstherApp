            opacity: 0;
        }

        @@keyframes fadeIn {
            to { opacity: 1; transform: none; }
            from { opacity: 0; transform: translateY(30px); }
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            h2 { font-size: 1.8rem; }
            .fs-5 { font-size: 1.05rem; }
        }
    </style>
